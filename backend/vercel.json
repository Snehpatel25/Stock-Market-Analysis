{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["package.json", ".env"],
        "maxLambdaSize": "50mb",
        "memory": 3008,
        "maxDuration": 30,
        "suppressLoaders": true
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "server.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/signup",
      "dest": "server.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/login",
      "dest": "server.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/protected",
      "dest": "server.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "server.js",
      "status": 200
    }
  ]
}